{
    "compilerOptions": {
      "resolveJsonModule": true,
      "declaration": true, // Generate .d.ts files
      "declarationDir": "dist", // Output directory for .d.ts files
      "emitDeclarationOnly": true, // Only generate declaration files
      "outDir": "dist", // Output directory for compiled files
      "module": "ESNext", // Ensure ES module support
      "target": "ESNext", // Modern JavaScript target
      "strict": true, // Enable strict type checking
      "moduleResolution": "node", // Resolve node_modules correctly
      "esModuleInterop": true, // Enable compatibility with CommonJS modules
      "types": [
        "vite-plugin-glsl/ext",
        "vite/client"
      ]
    },
    "include": ["src/**/*"],
    "exclude": ["types/vite-env.d.ts"]
  }